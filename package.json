{
  "name": "@karim-w/pester",
  "version": "0.1.0",
  "description": "React hooks and utilities for caching and performance",
  "author": "Karim",
  "license": "MIT",
  "keywords": ["react", "hooks", "cache", "pester"],

  "types": "./dist/index.d.ts",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },

  "files": ["dist"],

  "scripts": {
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "test": "vitest run"
  },

  "peerDependencies": {
    "react": ">=18"
  },

  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "jsdom": "^26.1.0",
    "react": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },

  "sideEffects": false,
  "vitest": {
    "environment": "jsdom",
    "setupFiles": ["./vitest.setup.ts"]
  }
}

